@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-danger">
            <div class="card-body text-center py-5">
                <div class="display-1 text-danger mb-3">⚠</div>
                <h3 class="text-danger">Something went wrong</h3>
                <p class="text-muted">An error occurred while processing your request.</p>
                @if (Model?.ShowRequestId == true)
                {
                    <p class="small"><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
                }
                <div class="d-flex gap-2 justify-content-center mt-3">
                    <a asp-area="User" asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Dashboard</a>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
</div>
