@using eShopFlix.Web.Models.Order
@model IReadOnlyList<ShipmentTrackingModel>
@{
    var order = ViewBag.Order as OrderDetailModel;
    var timeline = ViewBag.Timeline as IReadOnlyList<OrderTimelineModel> ?? [];
    ViewData["Title"] = $"Track Order {order?.OrderNumber}";
}

<div class="mb-3">
    <a asp-action="Details" asp-route-id="@order?.OrderId" class="text-decoration-none small">? Back to Order Details</a>
    <h2 class="mt-1">Track Order @order?.OrderNumber</h2>
</div>

<div class="row g-3">
    <!-- Shipments -->
    <div class="col-lg-7">
        @if (Model.Count == 0)
        {
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <h5 class="text-muted mb-2">No shipments yet</h5>
                    <p class="text-muted small">Your order is being prepared. Tracking info will appear here once shipped.</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var shipment in Model)
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">@(shipment.CarrierName ?? "Shipment")</h6>
                        <span class="badge bg-info text-dark">@shipment.ShipmentStatus</span>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (!string.IsNullOrEmpty(shipment.TrackingNumber))
                            {
                                <div class="col-md-6">
                                    <div class="small text-muted">Tracking Number</div>
                                    <div class="fw-semibold">
                                        @if (!string.IsNullOrEmpty(shipment.TrackingUrl))
                                        {
                                            <a href="@shipment.TrackingUrl" target="_blank" rel="noopener">@shipment.TrackingNumber ?</a>
                                        }
                                        else
                                        {
                                            <code>@shipment.TrackingNumber</code>
                                        }
                                    </div>
                                </div>
                            }
                            @if (shipment.ShippedAt.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="small text-muted">Shipped</div>
                                    <div>@shipment.ShippedAt.Value.ToString("dd MMM yyyy, HH:mm")</div>
                                </div>
                            }
                            @if (shipment.EstimatedDeliveryDate.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="small text-muted">Estimated Delivery</div>
                                    <div class="fw-semibold text-primary">@shipment.EstimatedDeliveryDate.Value.ToString("dd MMM yyyy")</div>
                                </div>
                            }
                            @if (shipment.DeliveredAt.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="small text-muted">Delivered</div>
                                    <div class="fw-semibold text-success">@shipment.DeliveredAt.Value.ToString("dd MMM yyyy, HH:mm")</div>
                                </div>
                            }
                        </div>

                        <!-- Progress bar -->
                        @{
                            var step = shipment.ShipmentStatus switch
                            {
                                "Delivered" => 4,
                                "InTransit" or "Shipped" => 3,
                                "Dispatched" => 2,
                                _ => 1
                            };
                            var pct = step * 25;
                        }
                        <div class="mt-3">
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-success" style="width: @(pct)%;"></div>
                            </div>
                            <div class="d-flex justify-content-between mt-1 small text-muted">
                                <span class="@(step >= 1 ? "fw-semibold text-dark" : "")">Confirmed</span>
                                <span class="@(step >= 2 ? "fw-semibold text-dark" : "")">Dispatched</span>
                                <span class="@(step >= 3 ? "fw-semibold text-dark" : "")">Shipped</span>
                                <span class="@(step >= 4 ? "fw-semibold text-dark" : "")">Delivered</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Timeline -->
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header"><h6 class="mb-0">Timeline</h6></div>
            <div class="card-body">
                @if (timeline.Count == 0)
                {
                    <div class="text-muted text-center py-3 small">No timeline events yet.</div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var evt in timeline.OrderByDescending(t => t.EventDate))
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <span class="badge bg-secondary me-1">@evt.EventType</span>
                                        <span class="small">@evt.EventDescription</span>
                                    </div>
                                    <div class="text-muted small text-nowrap ms-2">
                                        @evt.EventDate.ToString("dd MMM HH:mm")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="mt-3 d-grid gap-2">
            <a asp-action="Details" asp-route-id="@order?.OrderId" class="btn btn-outline-primary">View Order Details</a>
            <a asp-action="Index" class="btn btn-outline-secondary">All Orders</a>
        </div>
    </div>
</div>
