@using eShopFlix.Web.Models.Order
@model OrderDetailModel
@{
    ViewData["Title"] = $"Order {Model.OrderNumber}";
    var payments = ViewBag.Payments as IReadOnlyList<OrderPaymentModel> ?? [];
    var shipments = ViewBag.Shipments as IReadOnlyList<OrderShipmentModel> ?? [];
    var timeline = ViewBag.Timeline as IReadOnlyList<OrderTimelineModel> ?? [];
    var notes = ViewBag.Notes as IReadOnlyList<OrderNoteModel> ?? [];
    var shippingAddr = Model.Addresses.FirstOrDefault(a => a.AddressType == "Shipping");
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <a asp-action="Index" class="text-decoration-none small">? Back to Orders</a>
        <h2 class="mb-0 mt-1">Order @Model.OrderNumber</h2>
    </div>
    <div class="text-end">
        <span class="badge @Model.StatusBadgeClass fs-6">@Model.OrderStatus</span>
        <div class="text-muted small mt-1">@Model.OrderDate.ToString("dd MMM yyyy, HH:mm")</div>
    </div>
</div>

<div class="row g-3">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Items -->
        <div class="card shadow-sm mb-3">
            <div class="card-header"><h6 class="mb-0">Order Items (@Model.Items.Count)</h6></div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th>SKU</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Discount</th>
                                <th class="text-end">Tax</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-semibold">@item.ProductName</span>
                                        @if (item.IsGift)
                                        {
                                            <span class="badge bg-info ms-1">Gift</span>
                                        }
                                        <div class="text-muted small">@item.ItemStatus</div>
                                    </td>
                                    <td class="small text-muted">@item.Sku</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@Model.CurrencyCode @item.UnitPrice.ToString("N2")</td>
                                    <td class="text-end text-success">@(item.DiscountAmount > 0 ? $"-{item.DiscountAmount:N2}" : "—")</td>
                                    <td class="text-end">@item.TaxAmount.ToString("N2")</td>
                                    <td class="text-end fw-semibold">@Model.CurrencyCode @item.TotalPrice.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Admin Actions -->
        <div class="card shadow-sm mb-3">
            <div class="card-header"><h6 class="mb-0">Admin Actions</h6></div>
            <div class="card-body">
                <div class="row g-2">
                    @if (Model.OrderStatus == "Pending" || Model.OrderStatus == "New")
                    {
                        <div class="col-auto">
                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="orderId" value="@Model.OrderId" />
                                <input type="hidden" name="newStatus" value="Confirmed" />
                                <button type="submit" class="btn btn-success btn-sm">? Confirm Order</button>
                            </form>
                        </div>
                    }
                    @if (Model.OrderStatus != "Cancelled" && Model.OrderStatus != "Completed" && Model.OrderStatus != "Delivered")
                    {
                        <div class="col-auto">
                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#cancelModal">? Cancel Order</button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Timeline -->
        @if (timeline.Count > 0)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-header"><h6 class="mb-0">Timeline (All Events)</h6></div>
                <div class="card-body">
                    @foreach (var evt in timeline.OrderByDescending(t => t.EventDate))
                    {
                        <div class="d-flex mb-3">
                            <div class="me-3 text-muted small" style="min-width:120px;">
                                @evt.EventDate.ToString("dd MMM HH:mm")
                            </div>
                            <div>
                                <span class="badge bg-secondary me-1">@evt.EventType</span>
                                @evt.EventDescription
                                @if (!evt.IsCustomerVisible)
                                {
                                    <span class="badge bg-light text-dark ms-1 small">Internal</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Notes -->
        @if (notes.Count > 0)
        {
            <div class="card shadow-sm">
                <div class="card-header"><h6 class="mb-0">Notes</h6></div>
                <div class="list-group list-group-flush">
                    @foreach (var note in notes.OrderByDescending(n => n.CreatedAt))
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <span class="badge bg-secondary">@note.NoteType</span>
                                <span class="text-muted small">@note.CreatedAt.ToString("dd MMM yyyy HH:mm")</span>
                            </div>
                            <div class="mt-1">@note.Note</div>
                            @if (!note.IsVisibleToCustomer)
                            {
                                <span class="badge bg-light text-dark small">Internal Only</span>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Order Summary -->
        <div class="card shadow-sm mb-3">
            <div class="card-header"><h6 class="mb-0">Order Summary</h6></div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-1"><span>Subtotal</span><span>@Model.CurrencyCode @Model.SubtotalAmount.ToString("N2")</span></div>
                @if (Model.DiscountAmount > 0)
                {
                    <div class="d-flex justify-content-between mb-1 text-success"><span>Discount</span><span>-@Model.CurrencyCode @Model.DiscountAmount.ToString("N2")</span></div>
                }
                <div class="d-flex justify-content-between mb-1"><span>Tax</span><span>@Model.CurrencyCode @Model.TaxAmount.ToString("N2")</span></div>
                @if (Model.ShippingAmount > 0)
                {
                    <div class="d-flex justify-content-between mb-1"><span>Shipping</span><span>@Model.CurrencyCode @Model.ShippingAmount.ToString("N2")</span></div>
                }
                <hr />
                <div class="d-flex justify-content-between fw-bold fs-5"><span>Total</span><span>@Model.CurrencyCode @Model.TotalAmount.ToString("N2")</span></div>
            </div>
        </div>

        <!-- Order Info -->
        <div class="card shadow-sm mb-3">
            <div class="card-header"><h6 class="mb-0">Order Info</h6></div>
            <div class="card-body small">
                <div class="mb-2"><span class="text-muted">Customer:</span> @Model.CustomerEmail</div>
                <div class="mb-2"><span class="text-muted">Source:</span> @Model.OrderSource</div>
                <div class="mb-2"><span class="text-muted">Type:</span> @Model.OrderType</div>
                <div class="mb-2"><span class="text-muted">Priority:</span> @Model.Priority</div>
                <div class="mb-2"><span class="text-muted">Payment:</span> <span class="badge bg-secondary">@Model.PaymentStatus</span></div>
                <div><span class="text-muted">Fulfillment:</span> <span class="badge bg-secondary">@Model.FulfillmentStatus</span></div>
            </div>
        </div>

        <!-- Payments -->
        @if (payments.Count > 0)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-header"><h6 class="mb-0">Payments (@payments.Count)</h6></div>
                <div class="list-group list-group-flush">
                    @foreach (var p in payments)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold small">@p.PaymentMethod via @p.PaymentProvider</div>
                                    <div class="text-muted small">@p.TransactionId</div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-semibold">@Model.CurrencyCode @p.Amount.ToString("N2")</div>
                                    <span class="badge @p.StatusBadgeClass">@p.PaymentStatus</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Shipments -->
        @if (shipments.Count > 0)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-header"><h6 class="mb-0">Shipments (@shipments.Count)</h6></div>
                <div class="list-group list-group-flush">
                    @foreach (var s in shipments)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold small">@(s.CarrierName ?? "Carrier")</div>
                                    @if (!string.IsNullOrEmpty(s.TrackingNumber))
                                    {
                                        <div class="text-muted small"><code>@s.TrackingNumber</code></div>
                                    }
                                </div>
                                <span class="badge bg-info text-dark">@s.ShipmentStatus</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Shipping Address -->
        @if (shippingAddr != null)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-header"><h6 class="mb-0">Shipping Address</h6></div>
                <div class="card-body small">
                    <div class="fw-semibold">@shippingAddr.FullName</div>
                    <div>@shippingAddr.AddressLine1</div>
                    @if (!string.IsNullOrEmpty(shippingAddr.AddressLine2)) { <div>@shippingAddr.AddressLine2</div> }
                    <div>@shippingAddr.City, @shippingAddr.StateProvince @shippingAddr.PostalCode</div>
                    <div>@shippingAddr.CountryCode</div>
                    @if (!string.IsNullOrEmpty(shippingAddr.Phone)) { <div class="mt-1">?? @shippingAddr.Phone</div> }
                </div>
            </div>
        }
    </div>
</div>

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CancelOrder" method="post">
                <input type="hidden" name="orderId" value="@Model.OrderId" />
                <div class="modal-header">
                    <h5 class="modal-title">Cancel Order @Model.OrderNumber</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Cancellation Reason</label>
                        <textarea name="reason" class="form-control" rows="3" required
                                  placeholder="Enter the reason for cancellation..."></textarea>
                    </div>
                    <div class="alert alert-warning small mb-0">
                        This action cannot be undone. The customer will be notified.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Cancel Order</button>
                </div>
            </form>
        </div>
    </div>
</div>
