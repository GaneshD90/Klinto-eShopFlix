@using eShopFlix.Web.Models.Order
@model PagedResultModel<OrderListItemModel>
@{
    ViewData["Title"] = "Order Management";
    var searchTerm = ViewBag.SearchTerm as string;
    var statusFilter = ViewBag.StatusFilter as string;
    var statuses = new[] { "", "Pending", "Confirmed", "Processing", "Shipped", "Delivered", "Completed", "Cancelled", "OnHold" };
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Order Management</h2>
    <span class="text-muted">@Model.TotalCount order(s)</span>
</div>

<!-- Filters -->
<div class="card shadow-sm mb-3">
    <div class="card-body py-2">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-5">
                <label class="form-label small mb-1">Search</label>
                <input type="text" name="term" value="@searchTerm" class="form-control form-control-sm"
                       placeholder="Order #, email, customer..." />
            </div>
            <div class="col-md-3">
                <label class="form-label small mb-1">Status</label>
                <select name="status" class="form-select form-select-sm">
                    @foreach (var s in statuses)
                    {
                        <option value="@s" selected="@(s == statusFilter)">@(string.IsNullOrEmpty(s) ? "All Statuses" : s)</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary btn-sm w-100">Filter</button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm w-100">Clear</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Items.Count == 0)
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <h5 class="text-muted">No orders found matching your criteria.</h5>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Order #</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Items</th>
                        <th>Status</th>
                        <th>Payment</th>
                        <th>Fulfillment</th>
                        <th class="text-end">Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Items)
                    {
                        <tr>
                            <td class="fw-semibold">@order.OrderNumber</td>
                            <td class="text-muted small">@order.CustomerEmail</td>
                            <td class="text-muted small">@order.OrderDate.ToString("dd MMM yyyy HH:mm")</td>
                            <td>@order.ItemCount</td>
                            <td><span class="badge @order.StatusBadgeClass">@order.OrderStatus</span></td>
                            <td><span class="badge bg-secondary">@order.PaymentStatus</span></td>
                            <td><span class="badge bg-secondary">@order.FulfillmentStatus</span></td>
                            <td class="text-end fw-semibold">@order.CurrencyCode @order.TotalAmount.ToString("N2")</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@order.OrderId"
                                   class="btn btn-sm btn-outline-primary">Manage</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3" aria-label="Order pagination">
            <ul class="pagination justify-content-center mb-0">
                <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)"
                       asp-route-term="@searchTerm" asp-route-status="@statusFilter">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i"
                           asp-route-term="@searchTerm" asp-route-status="@statusFilter">@i</a>
                    </li>
                }
                <li class="page-item @(Model.HasNext ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)"
                       asp-route-term="@searchTerm" asp-route-status="@statusFilter">Next</a>
                </li>
            </ul>
        </nav>
    }
}
