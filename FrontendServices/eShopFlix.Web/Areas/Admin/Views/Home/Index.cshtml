@using eShopFlix.Web.Models.Order
@{
    ViewData["Title"] = "Admin Dashboard";
    var recentOrders = ViewBag.RecentOrders as IReadOnlyList<OrderListItemModel> ?? [];
    var pendingCount = (int)(ViewBag.PendingCount ?? 0);
    var todayRevenue = (decimal)(ViewBag.TodayRevenue ?? 0m);
}

<div class="row g-3">
    <div class="col-12">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="mb-0">Dashboard</h2>
            <div class="text-muted">@DateTime.UtcNow.ToString("dd MMM yyyy")</div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-start border-primary border-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small text-muted">Recent Orders</div>
                        <div class="display-6">@recentOrders.Count</div>
                    </div>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-start border-success border-4">
            <div class="card-body">
                <div class="small text-muted">Revenue (Today)</div>
                <div class="display-6">₹@todayRevenue.ToString("N0")</div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-start border-warning border-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="small text-muted">Pending Orders</div>
                        <div class="display-6">@pendingCount</div>
                    </div>
                    @if (pendingCount > 0)
                    {
                        <a asp-area="Admin" asp-controller="Orders" asp-action="Index" asp-route-status="Pending"
                           class="btn btn-sm btn-outline-warning">Review</a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Recent Orders</h6>
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">All Orders</a>
            </div>
            <div class="card-body p-0">
                @if (recentOrders.Count == 0)
                {
                    <div class="text-muted text-center py-4">No orders found. Orders will appear here as customers place them.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Order #</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Payment</th>
                                    <th class="text-end">Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in recentOrders)
                                {
                                    <tr>
                                        <td class="fw-semibold">@order.OrderNumber</td>
                                        <td class="text-muted small">@order.CustomerEmail</td>
                                        <td class="text-muted small">@order.OrderDate.ToString("dd MMM HH:mm")</td>
                                        <td><span class="badge @order.StatusBadgeClass">@order.OrderStatus</span></td>
                                        <td><span class="badge bg-secondary">@order.PaymentStatus</span></td>
                                        <td class="text-end fw-semibold">@order.CurrencyCode @order.TotalAmount.ToString("N2")</td>
                                        <td class="text-end">
                                            <a asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId"
                                               class="btn btn-sm btn-outline-primary">Manage</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

