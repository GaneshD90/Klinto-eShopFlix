@model TransactionModel
@{
    ViewData["Title"] = "Receipt";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Payment Receipt</h5>
                <span class="badge bg-light text-success text-uppercase">@Model.Status</span>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.OrderNumber))
                {
                    <div class="alert alert-success d-flex align-items-center mb-3" role="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle me-2" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                        </svg>
                        <div>
                            Order <strong>@Model.OrderNumber</strong> has been placed successfully!
                        </div>
                    </div>
                }
                <div class="row mb-3">
                    @if (!string.IsNullOrEmpty(Model.OrderNumber))
                    {
                        <div class="col-md-6">
                            <div class="small text-muted">Order Number</div>
                            <div class="fw-semibold text-primary">@Model.OrderNumber</div>
                        </div>
                        <div class="col-md-6">
                            <div class="small text-muted">Payment ID</div>
                            <div class="fw-semibold">@Model.Id</div>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6">
                            <div class="small text-muted">Payment ID</div>
                            <div class="fw-semibold">@Model.Id</div>
                        </div>
                        <div class="col-md-6">
                            <div class="small text-muted">Transaction</div>
                            <div class="fw-semibold">@Model.TransactionId</div>
                        </div>
                    }
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="small text-muted">Email</div>
                        <div>@Model.Email</div>
                    </div>
                    <div class="col-md-6">
                        <div class="small text-muted">Date</div>
                        <div>@Model.CreatedDate.ToString("dd MMM yyyy, HH:mm")</div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <div class="small text-muted">Subtotal</div>
                        <div class="fs-6">@Model.Currency @Model.Total.ToString("0.00")</div>
                    </div>
                    <div class="col-md-4">
                        <div class="small text-muted">Tax</div>
                        <div class="fs-6">@Model.Currency @Model.Tax.ToString("0.00")</div>
                    </div>
                    <div class="col-md-4">
                        <div class="small text-muted">Grand Total</div>
                        <div class="fs-5 fw-bold">@Model.Currency @Model.GrandTotal.ToString("0.00")</div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent d-flex justify-content-between">
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Continue Shopping</a>
                <a asp-area="User" asp-action="Index" asp-controller="Home" class="btn btn-success">My Dashboard</a>
            </div>
        </div>
    </div>
</div>